<Window x:Class="FamilyFeudGame.StudentGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FamilyFeudGame"
        mc:Ignorable="d"
        Title="StudentGameWindow" Height="600" Width="920">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black"/>
            <GradientStop Color="#444" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock Name="Team1Score"
                   Text="Team 1: 50"
                   Grid.Column="0"
                   Grid.Row="0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="40"
                   FontFamily="Segoe UI Variable Small Semibold"
                   FontWeight="Bold"
                   Foreground="White"/>

        <TextBlock Name="Team2Score"
                   Text="Team 2: 50"
                   Grid.Column="2"
                   Grid.Row="0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   FontSize="40"
                   FontFamily="Segoe UI Variable Small Semibold"
                   FontWeight="Bold"
                   Foreground="White"/>

        <TextBlock Name="RoundScore"
                   Text="Round"
                   Grid.Column="1"
                   Grid.Row="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="40"
                   FontFamily="Segoe UI Variable Small Semibold"
                   FontWeight="Bold"
                   Foreground="White"/>

        <Grid HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Grid.Column="0"
              Grid.Row="1"
              Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Question"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Column="0"
                   Grid.Row="0"
                   Grid.ColumnSpan="2"
                   Foreground="White"
                   FontSize="30"/>

            <StackPanel Grid.Column="0"
                    Grid.Row="1"
                    VerticalAlignment="Top">

                <TextBox Name="StudentAnswer1"
                     Text="1"
                     Style="{StaticResource AnswerTextBox}"
                         Height="75"/>
                <TextBox Text="2"
                     Style="{StaticResource AnswerTextBox}"
                         Height="75"/>
                <TextBox Text="3"
                     Style="{StaticResource AnswerTextBox}"
                         Height="75"/>
                <TextBox Text="4"
                     Style="{StaticResource AnswerTextBox}"
                         Height="75"/>
            </StackPanel>

            <StackPanel Grid.Column="1"
                        Grid.Row="1"
                        VerticalAlignment="Top">
                <TextBox Text="5"
                     Style="{StaticResource AnswerTextBox}"
                         Height="75"/>
                <TextBox Text="6"
                     Style="{StaticResource AnswerTextBox}"
                         Height="75"/>
                <TextBox Text="7"
                     Style="{StaticResource AnswerTextBox}"
                         Height="75"/>
                <TextBox Text="8"
                     Style="{StaticResource AnswerTextBox}"
                         Height="75"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
