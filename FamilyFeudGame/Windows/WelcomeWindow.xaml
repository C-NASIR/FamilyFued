<Window x:Class="FamilyFeudGame.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FamilyFeudGame"
        mc:Ignorable="d"
        Title="WelcomeWindow" Height="600" Width="920"
        ResizeMode="NoResize"
        WindowStyle="None">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black"/>
            <GradientStop Color="#444" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>


    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="X"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="#fc0"
                       FontSize="50"
                       Grid.Column="1"
                       Grid.Row="0"
                       />

        <Button x:Name="btnChooseFile"
                    Style="{StaticResource ButtonTheme}"
                    Content="Choose File"
                    Grid.Column="0"
                    Grid.Row="1"
                    Grid.ColumnSpan="3"
                    Click="BtnWelcome_Click"/>
        <Image Source="/Windows/Images/uwoshlogo.png"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Column="0"
                   Grid.Row="0"
                   Margin="10" >
        </Image>
        <Image Source="/Windows/Images/Logo_of_Family_Feud.png"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Column="2"
                   Grid.Row="0"
                   Margin="10"/>
    </Grid>
</Window>
