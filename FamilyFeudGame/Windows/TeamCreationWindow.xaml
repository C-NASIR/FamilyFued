<Window x:Class="FamilyFeudGame.TeamCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FamilyFeudGame"
        mc:Ignorable="d"
        Title="TeamCreationWindow" Height="600" Width="920">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="75"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Team 1"
                   Grid.Row="0"
                   Grid.Column="0"
                   FontSize="48"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="5"
                   FontFamily="Segoe UI Variable Small Semibold"
                   FontWeight="Bold"/>
        <TextBlock Text="Team 2"
                   Grid.Row="0"
                   Grid.Column="1"
                   FontSize="48"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="5"
                   FontFamily="Segoe UI Variable Small Semibold"
                   FontWeight="Bold"/>
        <TextBox x:Name="txtTeam1"
                 Style="{StaticResource TeamTextBox}"
                 Grid.Row="1"
                 Grid.Column="0"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 FontFamily="Segoe UI Variable Small Semibold"/>
        <TextBox x:Name="txtTeam2"
                 Style="{StaticResource TeamTextBox}"
                 Grid.Row="1"
                 Grid.Column="2"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 FontFamily="Segoe UI Variable Small Semibold"/>
        <Button Style="{StaticResource ButtonTheme}"
                Content="Go First"
                Grid.Row="2"
                Grid.Column="0"
                />
        <Button Style="{StaticResource ButtonTheme}"
                Content="Go First"
                Grid.Row="2"
                Grid.Column="1"
                />
    </Grid>
</Window>
