<Window x:Class="FamilyFeudGame.TeamCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FamilyFeudGame"
        mc:Ignorable="d"
        Title="TeamCreationWindow" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="lblTeamCreation" Text="Team Creation" Grid.ColumnSpan="2" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1" FontSize="36" Margin="20"/>
        <TextBlock Text="Team 1" Grid.Row="2" Grid.Column="1" FontSize="24" HorizontalAlignment="Center" Margin="5"/>
        <TextBlock Text="Team 2" Grid.Row="2" Grid.Column="2" FontSize="24" HorizontalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtTeam1" Text="Enter team name" FontSize="16" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center"/>
        <TextBox x:Name="txtTeam2" Text="Enter team name" FontSize="16" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Center"/>
        <TextBlock Text="Choose which team will go first" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" FontSize="24" Margin="0,30,0,0"/>
        <RadioButton x:Name="rbTeam1" Content="Team 1" FontSize="16" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Center"/>
        <RadioButton x:Name="rbTeam2" Content="Team 2" FontSize="16" Grid.Row="5" Grid.Column="2" HorizontalAlignment="Center"/>
        <Button x:Name="btnContinue" Content="Continue" FontSize="24" Click="BtnContinue_Click" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="20"/>

    </Grid>
</Window>
