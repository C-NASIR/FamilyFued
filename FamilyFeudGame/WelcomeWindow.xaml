<Window x:Class="FamilyFeudGame.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FamilyFeudGame"
        mc:Ignorable="d"
        Title="WelcomeWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Welcome to Family Feud" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Height="79" Width="542" RenderTransformOrigin="0.498,0.506" FontSize="48" VerticalContentAlignment="Center"/>
        <Button x:Name="btnWelcome" Content="Enter" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Height="46" Width="102" Click="BtnWelcome_Click"/>

    </Grid>
</Window>
